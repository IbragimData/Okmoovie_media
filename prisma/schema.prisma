generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Content {
  id        Int       @id @default(autoincrement())
  title     String
  type      ContentType // 'FILM' или 'SERIES'
  banner String?
  seasons   Season[]   // Только для сериалов
  duration  Int?       // Продолжительность (для фильмов)
  releaseDate Int? // Дата выхода
  url String @unique
  @@index([type])
}

model Season { 
  id        Int      @id @default(autoincrement())
  number    Int      // Номер сезона
  series    Content   @relation(fields: [seriesId], references: [id])
  seriesId  Int
  episodes  Episode[]
}

model Episode {
  id        Int      @id @default(autoincrement())
  title     String
  duration  Int      // Продолжительность серии
  season    Season   @relation(fields: [seasonId], references: [id])
  seasonId  Int
  releaseDate DateTime
}

enum ContentType {
  FILM
  SERIES
}